<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/allbackground"
    android:orientation="horizontal" >

    <ImageButton
        android:id="@+id/ib_delete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/remove_icon" />

    <ImageView
        android:id="@+id/iv_product"
        android:layout_width="80dp"
        android:layout_height="110dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/ib_delete"
        android:src="@drawable/no_picture" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/iv_product" >

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="fasfasdsa"
            android:textColor="#FE046F"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="@+id/tv_product_name"
            android:layout_below="@+id/tv_product_name"
            android:layout_marginTop="10dp"
            android:text="总价："
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_product_name"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tv_price"
            android:text="1111"
            android:textColor="#FFA329"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="@+id/tv_price"
            android:layout_below="@+id/tv_price"
            android:layout_marginTop="10dp"
            android:text="颜色："
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_color"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="@+id/tv_money"
            android:layout_below="@+id/tv_money"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tv_color"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="@+id/tv_color"
            android:layout_below="@+id/tv_color"
            android:layout_marginTop="10dp"
            android:text="数量："
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_num2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="@+id/tv_money"
            android:layout_below="@+id/tv_color"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tv_num"
            android:text="1111"
            android:textColor="#FFA329"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="@+id/tv_num"
            android:layout_below="@+id/tv_num"
            android:layout_marginTop="10dp"
            android:text="添加时间："
            android:textColor="#ffffff"
            android:textSize="14sp" />
        
        <TextView
            android:id="@+id/tv_date2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_date"
            android:layout_below="@+id/tv_num"
            android:layout_marginTop="10dp"
            android:text="dsfaasdf："
            android:textColor="#FFA329"
            android:textSize="14sp" />
        
    </RelativeLayout>

</RelativeLayout>