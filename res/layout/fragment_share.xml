<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RadioGroup
        android:id="@+id/rg_share"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_usercomment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/userusercomment"
            android:button="@null"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/rb_news"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/productnews"
            android:button="@null"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/rb_award"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/awardwinning"
            android:button="@null"
            android:gravity="center" />
    </RadioGroup>

    <FrameLayout
        android:id="@+id/fl_share"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >
    </FrameLayout>

</LinearLayout>